<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.luis.pruebaas1.ScoreFinal"
    android:background="@drawable/fondo_score">

    <TextView android:text="@string/BestScore" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bestScoreFinal"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#000000" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sheriff_logo"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView2" />

    <TextView
        android:id="@+id/scoreFinal"
        android:layout_width="148dp"
        android:layout_height="55dp"
        android:text="@string/score"
        android:textSize="45dp"
        android:layout_above="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="30dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textAlignment="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/scoreFinal2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="45dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#ff0000"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/bestScore"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="#f80f24c4"
        android:layout_below="@+id/bestScoreFinal"
        android:layout_toLeftOf="@+id/imageView2"
        android:layout_toStartOf="@+id/imageView2" />
    <ImageView
        android:id="@+id/bala1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/bullet_icon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/bala2"
        android:layout_alignEnd="@+id/bala2"
        android:layout_below="@+id/imageView2" />
    <ImageView
        android:id="@+id/bala2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/bullet_icon"
        android:layout_alignTop="@+id/scoreFinal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/scoreFinal"
        android:layout_toStartOf="@+id/scoreFinal"
        android:layout_above="@+id/scoreFinal2" />
    <ImageView
        android:id="@+id/bala3"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/bullet_icon"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/scoreFinal2"
        android:layout_toEndOf="@+id/scoreFinal2"
        android:layout_below="@+id/scoreFinal2" />
    <ImageView
        android:id="@+id/bala4"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/bullet_icon"
        android:layout_alignTop="@+id/scoreFinal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/scoreFinal"
        android:layout_above="@+id/scoreFinal2"
        android:layout_toRightOf="@+id/scoreFinal" />
    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chronometer"
        android:visibility="invisible"
        android:layout_gravity="center_horizontal" />
    <ImageButton
        android:id="@+id/buttonBack2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/back_button"
        android:layout_alignBottom="@+id/bala3"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
